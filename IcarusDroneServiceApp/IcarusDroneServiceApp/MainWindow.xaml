<Window x:Class="IcarusDroneServiceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IcarusDroneServiceApp"
        mc:Ignorable="d"
        Title="Icarus Drone Service Application" Height="850" Width="1480" MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <!--Main content-->
            <RowDefinition Height="*" />
            <!--Status bar-->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!--Intake-->
            <ColumnDefinition Width="3*" />
            <!--Queues-->
            <ColumnDefinition Width="4*" />
            <!--Finished-->
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--===Intake Panel===-->
        <Border Grid.Row="0" Grid.Column="0" Margin="10" CornerRadius="10">
            <StackPanel Margin="10">
                <TextBlock Text="Intake - Add New Drone"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />

                <!--Client Name-->
                <TextBlock Text="Client Name:" Margin="0,0,0,2" />
                <TextBox x:Name="txtClientName" Margin="0,0,0,10" />

                <!--Drone Model-->
                <TextBlock Text="Drone Model:" Margin="0,0,0,2" />
                <TextBox x:Name="txtDroneModel" Margin="0,0,0,10" />

                <!--Service Problem-->
                <TextBlock Text="Service Problem (multiline):" Margin="0,0,0,2" />
                <TextBox x:Name="txtServiceProblem"
                         Margin="0,0,0,10" 
                         AcceptsReturn="True" 
                         Height="100" 
                         TextWrapping="Wrap" />

                <!--Service Cost-->
                <TextBlock Text="Service Cost (##.##):" Margin="0,0,0,2" />
                <TextBox x:Name="txtServiceCost" Margin="0,0,0,10" />

                <!--Service Tag & Priority-->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <StackPanel Width="150">
                        <TextBlock Text="Service Tag (100-900, +10):" Margin="0,0,0,2" />
                        <TextBox x:Name="txtServiceTag" />
                    </StackPanel>

                    <StackPanel Margin="20,0,0,0">
                        <TextBlock Text="Priority:" Margin="0,0,0,2" />
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="rbRegular"
                                         Content="Regular"
                                         GroupName="PriorityGroup"
                                         Margin="0,0,10,0"
                                         IsChecked="True" />
                            <RadioButton x:Name="rbExpress"
                                         Content="Express"
                                         GroupName="PriorityGroup" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!--Add New Item Button-->
                <Button x:Name="btnAddNewItem"
                        Content="Add New Item"
                        Height="48"
                        HorizontalAlignment="Stretch" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
    